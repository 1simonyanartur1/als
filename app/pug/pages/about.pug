- var imgUrl = '../img/';
  
doctype
html
	include ../blocks/head.pug
		title АЛС
	body
		include ../blocks/header2.pug

		.page-container
			section.heading(style="background: url(../img/heading/about.jpg) no-repeat center center / cover;")
				.container
					h1.heading__title О КОМПАНИИ
					h2.heading__bgtitle О КОМПАНИИ
				.breadcrumbs
					.container
						ul.breadcrumbs
							li
								a(href="#") Главная
							li
								a(href="#") О компании
			
			section.advantages.type2
				img.line4(src=imgUrl+"lines/line14.png", alt="")
				img.line5(src=imgUrl+"lines/line15.png", alt="")
				.top
					.container
						.caption
							p.caption__subtitle ALS PARTNERS международная компания, созданная для повышения эффективности и оптимизации оказания услуг в сфере интеллектуальной собственности на международном уровне. Компания специализируется на регистрации и защите технических решений, технологий и товарных знаков по всему миру.
						.caption.caption2
							h2.caption__title Почему с нами работают?
							p.caption__line
						ul.list
							li.item
								img(src=imgUrl+"advantages/icon-advantages1.svg", alt="").item__icon
								p.item__text 20 лет практики защиты интеллектуальной собственности в ведущих странах мира
							li.item
								img(src=imgUrl+"advantages/icon-advantages2.svg", alt="").item__icon
								p.item__text Дорожим своей репутацией и репутацией наших партнеров
							li.item
								img(src=imgUrl+"advantages/icon-advantages3.svg", alt="").item__icon
								p.item__text Международная команда юристов и поверенных
							li.item
								img(src=imgUrl+"advantages/icon-advantages4.svg", alt="").item__icon
								p.item__text Контроль и регистрация всей интеллектуальной собственности клиента через личный кабинет
							li.item
								img(src=imgUrl+"advantages/icon-advantages5.svg", alt="").item__icon
								p.item__text Абсолютная конфиденциальность и гарантии
							li.item
								img(src=imgUrl+"advantages/icon-advantages6.svg", alt="").item__icon
								p.item__text Дистанционное цифровое взаимодействие
			
			section.about
				img.line1(src=imgUrl+"lines/line16.png", alt="")
